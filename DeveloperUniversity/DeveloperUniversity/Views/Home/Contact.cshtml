@using reCAPTCHA.MVC
@model DeveloperUniversity.Models.ViewModels.MailViewModel

@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Contact", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "contact-form", role = "form" }))
{
    @Html.ValidationSummary()
    <fieldset>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Name, new { @placeholder = "Name", @type = "text" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email Address", @type = "email" })
        </div>
        <div class="form-group">
            @Html.TextAreaFor(m => m.Messge, new { @placeholder = "Message" })
        </div>

        @Html.Recaptcha()
        @Html.ValidationMessage("ReCaptcha")

        <div class="button-wrapper">
            <input type="submit" value="Send" name="submit" class="btn btn-success">
            <input type="reset" value="Reset" name="MFReset" class="btn btn-default">
        </div>
    </fieldset>
}